{
    "metadata": [
      {
        "src": [
          {
            "files": [
              "src/**.csproj"
            ]
          }
        ],
        "dest": "api",
        "includePrivateMembers": false,
        "disableGitFeatures": false,
        "disableDefaultFilter": false,
        "noRestore": false,
        "namespaceLayout": "flattened"
      }
    ],
    "build": {
      "markdownEngineProperties": {
        "alerts": {
          "EXAMPLE": "alert alert-secondary"
        }
      },
      "globalMetadata" : 
        {
          "_appTitle": "My Docs",
          "_enableSearch": "true",
          "_disableNewTab": "false"
      },    
      "content": [
        {
          "files": [
            "api/**.yml",
            "api/index.md"
          ]
        },
        {
          "files": [
            "articles/**.md",
            "articles/**/toc.yml",
            "toc.yml",
            "*.md"
          ]
        }
      ],
      "resource": [
        {
          "files": [
            ".attachments/**",
            "articles/**.txt",
            "articles/**.wav",
            "articles/**.mp3",
            "articles/**.wma",
            "articles/**.png",
            "articles/**.htm",
            "Web.Config"
          ]
        }
      ],
      "overwrite": [
        {
          "files": [
            "apidoc/**.md"
          ],
          "exclude": [
            "obj/**",
            "_site/**"
          ]
        }
      ],
      "dest": "_site",
      "globalMetadataFiles": [],
      "fileMetadataFiles": [],
      "template": [
        "default",
        "modern",
        "templates/awesome"
      ],
      "postProcessors": ["ExtractSearchIndex"],
      "noLangKeyword": false,
      "keepFileLink": false,
      "disableGitFeatures": false
    }
  }  
